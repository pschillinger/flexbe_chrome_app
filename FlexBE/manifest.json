{
  "name": "FlexBE App",
  "description": "User Interface to create, modify and control behaviors based on the FlexBE behavior engine.",
  "version": "1.0.15",
  "app": {
    "background": {
      "scripts": ["launcher.js"]
    }
  },
  "icons": { "128": "img/icon-128.png" },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "sockets": {
    "tcp": {
      "connect": "127.0.0.1:*"
    },
    "tcpServer": {
      "listen": "127.0.0.1:*"
    }
  },
  "commands": {
    "Copy": { "suggested_key": { "default": "Ctrl+Shift+C" }, "description": "Copy" },
    "Paste": { "suggested_key": { "default": "Ctrl+Shift+V" }, "description": "Paste" },
    "Undo": { "suggested_key": { "default": "Ctrl+Shift+Z" }, "description": "Undo" },
    "Redo": { "suggested_key": { "default": "Ctrl+Shift+Y" }, "description": "Redo" }
  } 
}
